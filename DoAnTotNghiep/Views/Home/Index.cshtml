@section Scripts{

    <!-- #region NavigationCategory -->
    <script type="text/x-jquery-tmpl" id="dropdownCategory">
        <li class="{{Child}}">
            <a class="dropdown-item {{test}} dropright">{{Name}}</a>
            <ul class="dropdown-menu" id="dropdown-menu{{ID}}"></ul>
        </li>
    </script>
    <script type="text/x-jquery-tmpl" id="dropdownSubCategory">
        <li><a class="dropdown-item" tabindex="-1" href="/CourseCategory/CategoryToCourse/{{ID}}">{{Name}}</a></li>
    </script>
    <!-- #endregion -->

    <script>
        $('.owl-carousel').owlCarousel({
            loop: true,
            margin: 10,
            autoplay: true,
            autoplayTimeout: 2000,
            autoplayHoverPause: true,
            responsiveClass: true,
            responsive: {
                0: {
                    items: 1,
                    nav: true
                },
                600: {
                    items: 3,
                    nav: false
                },
                2024: {
                    items: 4,
                    nav: true,
                    loop: true
                },
                2000: {
                    items: 4,
                    nav: true,
                    loop: true
                }
            }
        })</script>
    <script>
        $('#myModal').on('shown.bs.modal', function () {
            $('#myInput').trigger('focus')
        });
    </script>
    <script>
        $(document).ready(function () {
            $("body").on("click", ".dropdown-submenu a.test", function (e) {
                $(this).next('ul').toggle();
                e.stopPropagation();
                e.preventDefault();
            });
        });</script>
    <!-- #region button topcourse -->
    <script id="buttonTopCourse" type="text/x-jquery-tmpl">
        <button class="tablinks myTadBtn {{Active}}" value="{{ID}}" onclick="openCity(event, '{{TopCateID}})'">{{Name}}</button>
    </script>
    <script id="divTopCourse" type="text/x-jquery-tmpl">
        <div id="{{TopCateID}}" class="tabcontent  my-tabcontent ">
            <div class="row  owl-theme" id="{{ID}}">
            </div>
        </div>
    </script>
    <!-- #endregion -->
    <!-- #region topcourse -->
    <script id="topCourse" type="text/x-jquery-tmpl">
        <a href="/Home/Detail/{{ID}}">
            <div class="col-md-3 col-sm-12  sale_content">
                <div class="card mycard">
                    <img class="card-img-top" src="{{Image}}" alt="Card image cap">
