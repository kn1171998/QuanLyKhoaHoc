@model DashboardVM
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-4 revenue-box ">
            <div class="icon-revenue">
                <ion-icon name="newspaper-outline"></ion-icon>
            </div>
            <div class="content-revenue">
                <div class="content-revenue__text">
                    Tổng khoá học được mua hôm nay
                </div>
                <div class="content-revenue__number">@Model.TotalCourseDayNow</div>
            </div>
        </div>
        <div class="col-4 revenue-box">
            <div class="icon-revenue">
                <ion-icon name="cash-outline"></ion-icon>
            </div>
            <div class="content-revenue">
                <div class="content-revenue__text">Doanh thu hôm nay</div>
                <div class="content-revenue__number">@string.Format("{0:0,0}", Model.RevenueToDay)</div>
            </div>
        </div>
        <div class="col-4 revenue-box">
            <div class="icon-revenue">
                <ion-icon name="person-outline"></ion-icon>
            </div>
            <div class="content-revenue">
                <div class="content-revenue__text">Khách hàng hôm nay</div>
                <div class="content-revenue__number">@Model.TotalCustomerDayNow</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 mt-5 mb-3">
            <h3 class="h3_title">
                Báo cáo doanh thu
            </h3>
        </div>
        <div class="col-6">
            <div class="form-group p-2">
                <select class="form-control" id="methodReport">
                    <option>Chọn hình thức báo cáo</option>
                    <option value="d">Báo cáo ngày</option>
                    <option value="w">Báo cáo tuần</option>
                    <option value="m">Báo cáo tháng</option>
                    <option value="y">Báo cáo năm</option>
                </select>
            </div>

        </div>
        <div class="col-6">
            <h1 class="text-center">Chart</h1>
        </div>
    </div>
</div>
@section Scripts{
    <script id="resultReport" type="x-tmpl-mustache">
        <div class="revenue-detail">
            <div class="revenue-detail__item">
                <div class="icon-revenue">
                    <ion-icon name="newspaper-outline"></ion-icon>
                </div>
                <div class="content-revenue">
                    <div class="content-revenue__text">
                        Tổng đơn hàng
                    </div>
                    <div class="content-revenue__number">{{totalOrder}}</div>
                </div>
            </div>
            <div class="revenue-detail__item">
                <div class="icon-revenue">
                    <ion-icon name="cash-outline"></ion-icon>
                </div>
                <div class="content-revenue">
                    <div class="content-revenue__text">
                        Tổng doanh thu
                    </div>
                    <div class="content-revenue__number">{{totalRevenue}}</div>
                </div>
            </div>
            <div class="revenue-detail__item">
                <div class="icon-revenue">
                    <ion-icon name="person-outline"></ion-icon>
                </div>
                <div class="content-revenue">
                    <div class="content-revenue__text">
                        Tổng Khách hàng
                    </div>
                    <div class="content-revenue__number">{{totalCustomer}}</div>
                </div>
            </div>
            <div class="revenue-detail__item">
                <div class="icon-revenue">
                    <ion-icon name="film-outline"></ion-icon>
                </div>
                <div class="content-revenue">
                    <div class="content-revenue__text">
                        Tổng khóa học
                    </div>
                    <div class="content-revenue__number">{{totalCourse}}</div>
                </div>
            </div>
            <div class="revenue-detail__item">
                <div class="icon-revenue">
                    <ion-icon name="sad-outline"></ion-icon>
                </div>
                <div class="content-revenue">
                    <div class="content-revenue__text">
                        Khoá học được mua nhiều
                    </div>
                    <div class="content-revenue__number">{{courseBuyMore}}</div>
                </div>
            </div>
        </div>
    </script>
    <script>
        $('body').on('change', '#methodReport', function () {
            var _self = $(this);
            $.ajax({
                url: "/Dashboard/Report",
                type: "POST",
                dataType: "JSON",
                data: {
                    MethodReport: _self.val()
                },
                success: function (res) {

                }
            })
        });
    </script>
}
