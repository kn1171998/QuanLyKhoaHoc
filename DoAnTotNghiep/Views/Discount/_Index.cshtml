<div class="row">
    <div class="col-md-12">
        <div class="table-responsive " style="grid-auto-columns:auto">
            <table class="table table-bordered table-striped table-hover table-responsive">
                <thead class="thead-light text-center">
                    <tr>
                        <th style="width: 15%">Mã khuyến mãi</th>                        
                        <th style="width: 15%">Từ ngày</th>
                        <th style="width: 15%">Đến ngày</th>
                        <th style="width: 15%">Chiết khấu phần trăm</th>
                        <th style="width: 15%">Số tiền chiết khấu</th>                        
                        <th><span class="fa fa-cog"></span></th>
                    </tr>
                </thead>
                <tbody id="tblDiscount"></tbody>
            </table>
        </div>
        <div id="pagination" class="pagination">

        </div>
    </div>
</div>

<script id="discount-template" type="x-tmpl-mustache">
    <tr class="text-center">
        <td>{{CodeDiscount}}</td>
        <td>{{FromDate}}</td>
        <td>{{ToDate}}</td>
        <td>{{DiscountPercent}}</td>
        <td>{{DiscountAmount}}</td>
        <td class="text-center col-md-2">
            <a href="javascript:void(0);"
               data-href="dsoft-popup-modal"
               data-event="popup-modal"
               data-url="/Discount/Detail/{{ID}}"
               data-width="1000"
               data-height="600"
               class="btn btn-sm btn-radius-left btn-danger dsoft-btn-show-popup mb-2">
                <span class="fa fa-check-circle"></span> 
            </a>
            <a href="javascript:void(0);"
               data-href="dsoft-popup-modal"
               data-event="popup-modal"
               data-url="/Discount/Create/{{ID}}"
               data-width="1000"
               data-height="600"
               class="btn btn-sm btn-radius-left btn-warning dsoft-btn-show-popup mb-2">
                <span class="fa fa-edit"></span> 
            </a>
            <a href="javascript:void(0);"
               data-message-confirm="Bạn có muốn xoá không?"
               action="/Discount/Delete"
               data-id="{{ID}}"
               class="btn btn-sm btn-danger btn-radius-right btn-delete btnDelete mb-2">
                <span class="fa fa-remove"></span>
            </a>
        </td>
    </tr>
</script>

