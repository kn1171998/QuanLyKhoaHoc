@section Scripts{
    <script>
        $('body').on('change', '#sortPrice', function () {
            $('#filterPrice').submit();
        });
        $('body').on('change', '#radiofree', function () {
            $('#filterPrice').submit();
        });
    </script>

    <script id="course-item" type="x-tmpl-mustache">
        <div class="col-md-4 col-sm-12  sale_content">
            <div class="card mycard">
                <img class="card-img-top" src="{{image}}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{nameCourse}}</h5>
                    <a href="#" class="name-author"><small>{{nameAuthor}}</small> </a>
                    <div class="star-courses cleafix text-left">
                        <span class="mr-1"><i class="fa fa-star" aria-hidden="true"></i></span>
                        <span class="mr-1"><i class="fa fa-star" aria-hidden="true"></i></span>
