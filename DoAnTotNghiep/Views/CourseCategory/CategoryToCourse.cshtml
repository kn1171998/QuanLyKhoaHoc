                            Miễn Phí
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="radiofree" id="radiofree" value="1">
                        <label class="form-check-label" for="nofree">
                            Có Phí
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="radiofree" id="radiofree" value="2">
                        <label class="form-check-label" for="nofree">
                            Không chọn
                        </label>
                    </div>
                </div>

                <div class="box-category   text-dark p-3 mb-3">
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Sắp xếp giá tiền</label>
                        <select name="sortPrice" class="form-control" id="sortPrice">
                            <option value="1">Không chọn</option>
                            <option value="1">Tăng dần</option>
                            <option value="0">Giảm dần</option>
                        </select>
                    </div>
                </div>
                <button class="btn btn-outline-danger w-100" id="idbtnSearch"> Tìm kiếm</button>
                @*</form>*@
            </div>
            <div class="col-9">
                <div class="tab box-category mb-3">
                    <button class="tablinks myTadBtn active" onclick="openCity(event, 'All')">Phổ biến nhất</button>
                    <button class="tablinks myTadBtn" onclick="openCity(event, 'Business')">Mới nhất</button>
                </div>
                <div class="">
