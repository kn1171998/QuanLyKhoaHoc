    <script>
        $('body').on('change', '#methodReport', function () {
            if (startDate != "" || endDate != "") {
                $.ajax({
                    url: "/Dashboard/Report",
                    type: "POST",
                    dataType: "JSON",
                    data: {
                        startdate: startDate,
                        enddate: endDate
                    },
                    success: function (res) {
                        var template = $('#resultReport').html();
                        var html = '';
                        html = Mustache.render(template, {
                            totalRevenue: res.revenue,
                            totalCustomer: res.totalcustomer,
                            totalCourse: res.totalcourse
                        });
                        $('#report').html(html);
                    }
