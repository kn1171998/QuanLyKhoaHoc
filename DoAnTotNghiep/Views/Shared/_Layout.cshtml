
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon.png">
    <!-- Custom CSS -->
    <environment include="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        @*<link href="~/css/bootstrap.min.css" rel="stylesheet" />*@
        <link href="~/lib/upload/fileupload.css" rel="stylesheet" />
        <link href="~/lib/jqueryui/jquery-ui.css" rel="stylesheet" />
        <link href="~/lib/pnotify/pnotify.css" rel="stylesheet" />
        <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
        <!-- Custom CSS -->
        <link href="~/css/main.css" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://unpkg.com/ionicons@5.1.2/dist/ionicons.js"></script>
        <link href="~/css/startuppost.css" rel="stylesheet" />
        <link href="~/css/style.css" rel="stylesheet" />
    </environment>
    <environment include="Staging,Production">

        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        @*<link href="~/css/bootstrap.min.css" rel="stylesheet" />*@
        <link href="~/lib/jqueryui/jquery-ui.min.css" rel="stylesheet" />
        <link href="~/lib/pnotify/pnotify.css" rel="stylesheet" />
        <link href="~/lib/upload/fileupload.css" rel="stylesheet" />

        <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
        <!-- Custom CSS -->
        <link href="~/css/main.css" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://unpkg.com/ionicons@5.1.2/dist/ionicons.js"></script>
        <link href="~/css/startuppost.css" rel="stylesheet" />
        <link href="~/css/style.css" rel="stylesheet" />
    </environment>
    <style>
        body {
            padding: 0px;
        }
    </style>
    <style>
        label.error {
            color: red;
        }
    </style>
</head>
<body>
    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="custom-menu ml-1">
                <button type="button" id="sidebarCollapse" class="btn btn-primary ml-1"></button>

            </div>

            <div class="img bg-wrap text-center py-4" style="background-image: url(../images/bg_1.jpg);">
                <div class="user-logo">
                    <div class="img" style="background-image: url(@User.FindFirst( System.Security.Claims.ClaimTypes.CookiePath).Value);"></div>
                    <h3> @User.FindFirst(System.Security.Claims.ClaimTypes.Name).Value</h3>
                </div>
            </div>
            <ul class="list-unstyled components mb-5">
                <li class="active">
                    <a asp-action="Index" asp-controller="Home"><span class="fa fa-home mr-3"></span>Trang chủ</a>
                </li>
                <li class="">
                    <a asp-action="Index" asp-controller="Dashboard"><span class="fa fa-dashcube mr-3"></span>Tổng quan</a>
                </li>


                <li class="dropdown">
                    <a class="  dropdown-toggle" data-toggle="dropdown">
                        <span class="fa fa-chevron-down mr-3 notif"></span>Thông tin doanh thu
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu bg-primary">
                        <li><a asp-action="ReportRevenue" asp-controller="Dashboard"> <i class="fa fa-file mr-3"></i> Báo cáo doanh thu</a></li>
                        <li><a asp-action="Index" asp-controller="Order"> <i class="fa fa-file mr-3"></i>Thông tin đơn hàng</a></li>
                    </ul>
                </li>

                <li class="dropdown ">
                    <a class="  dropdown-toggle" data-toggle="dropdown">
                        <span class="fa fa-chevron-down mr-3 notif"></span>Quản lý khoá học
                        <span class="caret pr-2"></span>
                    </a>
                    <ul class="dropdown-menu bg-primary">
                        <li class="text-dark"><a asp-action="Index" asp-controller="CourseCategory"><span class="fa fa-dashcube mr-3"></span>Danh mục khoá học</a></li>
                        <li><a asp-action="Index" asp-controller="Course"><span class="fa fa-camera mr-3"></span>Các khoá học</a></li>
                        <li><a asp-action="Index" asp-controller="Discount"><span class="fa fa-gift mr-3"></span> Khuyến mãi khoá học</a></li>
                    </ul>
                </li>


                <li class="dropdown ">
            <a class="  dropdown-toggle" data-toggle="dropdown">
                <span class="fa fa-chevron-down mr-3 notif"></span>Quản lý người dùng

            </a>
            <ul class="dropdown-menu bg-primary">
              <li><a asp-action="Index" asp-controller="UserCategory"><span class="fa fa-chevron-down mr-3"></span>Danh mục người dùng</a></li>
            </ul>
        </li>             
                <li class="nav-item mr-3">
                    <a class="nav-link" href="/Home/Logout">
                        <span class="ffa fa-sign-out-alt mr-3"></span>   Đăng xuất

                    </a>
                </li>
            </ul>
        </nav>
        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5 pt-5">        
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; 2020 - DoAnTotNghiep</p>
            </footer>
            <!-- POPUP MODAL-->
            <div class="modal dsoft-popup-modal admin-form" role="dialog">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content panel">
                        <div class="modal-header panel-heading">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>

                        </div>
                        <div class="modal-body panel-content">
                        </div>
                    </div>
                </div>
            </div>

            <!-- POPUP MODAL-->
            <div class="modal fade dsoft-popup-modal-2 admin-form" role="dialog">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content panel">
                        <div class="modal-header panel-heading">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>

                        </div>
                        <div class="modal-body panel-content">
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <environment include="Development">

        <!-- All Jquery -->
        <!-- ============================================================== -->

        <script src="~/css/popper.js"></script>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jqueryui/jquery-ui.js"></script>
        <script src="~/css/bootstrap.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        <!-- apps -->
        <!--This page JavaScript -->
        <script src="~/lib/mustache/mustache.js"></script>
        <script src="~/lib/twbs-pagination/jquery.twbsPagination.js"></script>
        <script src="~/lib/pnotify/pnotify.js"></script>
        <script src="~/lib/pnotify/pnotify.custom.js"></script>
        <script src="~/lib/bootbox.js/bootbox.js"></script>
        <script src="~/lib/upload/fileupload.js"></script>
        <script src="~/lib/select2/js/select2.min.js"></script>
        <!--Custom JavaScript -->
        @*<script src="~/js/custom.js"></script>*@
        <script src="~/js/main.js"></script>
        <script src="~/js/common/commonfile.js"></script>
    </environment>
    <environment include="Staging,Production">
        <!-- All Jquery -->
        <!-- ============================================================== -->

        <script src="~/css/popper.js"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
        <script src="~/css/bootstrap.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>

        <!-- apps -->
        <!--This page JavaScript -->
        <script src="~/lib/mustache/mustache.js"></script>
        <script src="~/lib/twbs-pagination/jquery.twbsPagination.min.js"></script>
        <script src="~/lib/pnotify/pnotify.js"></script>
        <script src="~/lib/pnotify/pnotify.custom.js"></script>
        <script src="~/lib/bootbox.js/bootbox.min.js"></script>
        <script src="~/lib/upload/fileupload.js"></script>
        <script src="~/lib/select2/js/select2.min.js"></script>
        <!--Custom JavaScript -->
        @*<script src="~/js/custom.js"></script>*@
        <script src="~/js/main.js"></script>
        <script src="~/js/common/commonfile.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
